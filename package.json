{
  "name": "code-challenge-pocketcoach",
  "version": "1.0.0",
  "description": "Code challenge for PocketCoach",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev:build": "npx rimraf public && npx cross-env process.env.NODE_ENV=development webpack --mode development --config webpack.dev.js",
    "build": "npx rimraf public && npx cross-env process.env.NODE_ENV=production webpack --mode production --config webpack.prod.js",
    "dev:wds": "npx webpack-dev-server --hot --inline --open --port 3000 --content-base public --history-api-fallback --watch-content-base --config webpack.dev.js",
    "prod:wds": "npx webpack-dev-server --open --compress --port 3004 --content-base public --history-api-fallback --watch-content-base --config webpack.dev.js",
    "dev": "npm run dev:build && npm run dev:wds",
    "js:prettify": "npx prettier --parser=babel --write \"src/**/*.{js,jsx}\"",
    "css:prettify": "npx prettier --parser=css --write \"src/**/*.css\"",
    "format": "npm run css:prettify && npm run js:prettify",
    "prod": "npm run build && npm run prod:wds",
    "branch:deploy": "now",
    "prod:deploy": "now --prod"
  },
  "author": "Naomi Hauret",
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.8.20",
    "now": "^17.0.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "@hot-loader/react-dom": "^16.11.0",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^3.1.0",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "react-hot-loader": "^4.12.19",
    "terser-webpack-plugin": "^2.3.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  }
}
